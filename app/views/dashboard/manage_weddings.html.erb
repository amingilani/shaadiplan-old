<div class="ui text container">
    <%= form_for @new_wedding, html: {class: 'ui form'} do |f| %>
    <%= f.label :name, "Let's give this wedding a name", class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
    <h3>Let's talk about the couple</h3>
    <%= f.fields_for :team_first do |tf| %>
    <%= tf.label :name, 'Partner name (your side)', class: "control-label" %>
    <%= tf.text_field :name, class: "form-control" %>
    <% end %>

    <%= f.fields_for :team_alpha do |ta| %>
    <%= ta.label :name, 'Partner name (their side)', class: "control-label" %>
    <%= ta.text_field :name, class: "form-control" %>
    <% end %>


    <%= f.submit "Create", class: "ui button" %>
    <% end %>
</div>
