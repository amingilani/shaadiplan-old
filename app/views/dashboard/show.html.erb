<div class="ui text container">
    <div>
        <img class="avatar" src="<%= current_user.info :picture %>"/>
        <h2>Welcome
            <%= current_user.info :name  %></h2>
        <p>You are part of
                <%= "#{@wedding_count} #{'wedding'.pluralize(@wedding_count)}" %>
        </p>
        <a class="ui button" href="<%= new_wedding_path %>">
            <%= @wedding_count.zero? ? 'Create one!' : 'Create another!' %></a>
    </div>
</div>
